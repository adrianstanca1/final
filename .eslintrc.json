{
    "root": true,
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 2022,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        },
        "project": [
            "./tsconfig.json",
            "./tsconfig.frontend.json",
            "./tsconfig.api.json",
            "./tsconfig.services.json"
        ]
    },
    "env": {
        "browser": true,
        "node": true,
        "es2022": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended"
    ],
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "@typescript-eslint/no-explicit-any": "warn",
        "@typescript-eslint/explicit-module-boundary-types": "off",
        "no-unused-vars": "off",
        "@typescript-eslint/no-unused-vars": [
            "warn",
            {
                "argsIgnorePattern": "^_",
                "varsIgnorePattern": "^_"
            }
        ]
    },
    "overrides": [
        {
            "files": [
                "**/*.tsx"
            ],
            "rules": {
                "@typescript-eslint/explicit-module-boundary-types": "off"
            }
        },
        {
            "files": [
                "api/**/*.ts"
            ],
            "env": {
                "node": true,
                "browser": false
            },
            "rules": {
                "@typescript-eslint/explicit-function-return-type": [
                    "error",
                    {
                        "allowExpressions": true,
                        "allowTypedFunctionExpressions": true
                    }
                ]
            }
        }
    ],
    "settings": {
        "import/resolver": {
            "typescript": {}
        }
    }
}