# Backend Production Environment Configuration
# ASAgents Platform - Backend Production Deployment

# ===========================================
# SERVER CONFIGURATION
# ===========================================

# Server Settings
NODE_ENV=production
PORT=4000
HOST=0.0.0.0

# API Configuration
API_VERSION=v1
API_PREFIX=/api
CORS_ORIGIN=https://your-frontend-domain.com
CORS_CREDENTIALS=true

# ===========================================
# DATABASE CONFIGURATION
# ===========================================

# Primary Database (MySQL/MariaDB)
DB_HOST=your-database-host.com
DB_PORT=3306
DB_NAME=asagents_production
DB_USER=your-db-username
DB_PASSWORD=your-secure-db-password
DB_SSL=true
DB_CONNECTION_LIMIT=20
DB_TIMEOUT=60000

# Database Pool Configuration
DB_POOL_MIN=5
DB_POOL_MAX=20
DB_POOL_IDLE_TIMEOUT=30000
DB_POOL_ACQUIRE_TIMEOUT=60000

# ===========================================
# AUTHENTICATION & SECURITY
# ===========================================

# JWT Configuration
JWT_SECRET=your-super-secure-jwt-secret-key-change-this-in-production
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d
JWT_ALGORITHM=HS256

# Session Configuration
SESSION_SECRET=your-super-secure-session-secret-change-this-in-production
SESSION_COOKIE_SECURE=true
SESSION_COOKIE_HTTP_ONLY=true
SESSION_COOKIE_SAME_SITE=strict
SESSION_MAX_AGE=86400000

# OAuth Configuration
GOOGLE_CLIENT_ID=892922789443-d6laifg42fjsuvkjpbja7989ulrfdqqu.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GITHUB_CLIENT_ID=Iv23lihOkwvRyu8n7WdY
GITHUB_CLIENT_SECRET=your-github-client-secret
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret

# OAuth Redirect URLs
GOOGLE_REDIRECT_URL=https://your-backend-domain.com/api/auth/google/callback
GITHUB_REDIRECT_URL=https://your-backend-domain.com/api/auth/github/callback
FACEBOOK_REDIRECT_URL=https://your-backend-domain.com/api/auth/facebook/callback

# ===========================================
# AI SERVICES CONFIGURATION
# ===========================================

# Gemini AI Configuration
GEMINI_API_KEY=AIzaSyC4BTpQS0_ZdZsOl0c3beb344hr3xZEVy8
GEMINI_MODEL=gemini-2.0-flash-001
GEMINI_MAX_TOKENS=8192
GEMINI_TEMPERATURE=0.7

# AI Processing Configuration
AI_PROCESSING_TIMEOUT=30000
AI_MAX_CONCURRENT_REQUESTS=10
AI_RETRY_ATTEMPTS=3
AI_RETRY_DELAY=1000

# ===========================================
# FILE STORAGE CONFIGURATION
# ===========================================

# File Upload Configuration
UPLOAD_MAX_SIZE=104857600
UPLOAD_ALLOWED_TYPES=image/*,audio/*,video/*,application/pdf,text/*
UPLOAD_DESTINATION=uploads/
UPLOAD_TEMP_DIR=temp/

# Cloud Storage (if using AWS S3, Google Cloud, etc.)
CLOUD_STORAGE_PROVIDER=local
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-s3-bucket-name

# ===========================================
# LOGGING & MONITORING
# ===========================================

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json
LOG_FILE=logs/app.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5

# Monitoring & Health Checks
HEALTH_CHECK_INTERVAL=30000
METRICS_ENABLED=true
PERFORMANCE_MONITORING=true

# Error Reporting
SENTRY_DSN=your-sentry-dsn
ERROR_REPORTING_ENABLED=true

# ===========================================
# PERFORMANCE & CACHING
# ===========================================

# Redis Configuration (for caching and sessions)
REDIS_HOST=your-redis-host.com
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password
REDIS_DB=0
REDIS_TTL=3600

# Rate Limiting
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_SKIP_SUCCESSFUL=false

# Compression & Optimization
COMPRESSION_ENABLED=true
COMPRESSION_LEVEL=6
STATIC_CACHE_MAX_AGE=31536000

# ===========================================
# EMAIL CONFIGURATION
# ===========================================

# SMTP Configuration
SMTP_HOST=your-smtp-host.com
SMTP_PORT=587
SMTP_SECURE=true
SMTP_USER=your-smtp-username
SMTP_PASSWORD=your-smtp-password
EMAIL_FROM=noreply@your-domain.com

# ===========================================
# SECURITY HEADERS & PROTECTION
# ===========================================

# Security Configuration
HELMET_ENABLED=true
CSRF_PROTECTION=true
XSS_PROTECTION=true
CONTENT_SECURITY_POLICY=true
HSTS_ENABLED=true
HSTS_MAX_AGE=31536000

# API Security
API_KEY_REQUIRED=false
API_RATE_LIMITING=true
API_REQUEST_VALIDATION=true

# ===========================================
# DEPLOYMENT CONFIGURATION
# ===========================================

# Build Configuration
BUILD_OPTIMIZATION=true
MINIFY_RESPONSES=true
GZIP_COMPRESSION=true

# SSL Configuration
SSL_ENABLED=true
SSL_CERT_PATH=/path/to/ssl/cert.pem
SSL_KEY_PATH=/path/to/ssl/key.pem

# Process Management
PM2_INSTANCES=max
PM2_EXEC_MODE=cluster
PM2_MAX_MEMORY_RESTART=1G
