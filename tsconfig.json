{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "moduleResolution": "bundler",
    "types": [
      "node",
      "vitest",
      "vite/client"
    ],
    "moduleDetection": "force",
    "allowImportingTsExtensions": true,
    "noEmit": true
  },
  "include": [
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "dist-services",
    "dist-frontend",
    "**/*.test.ts",
    "**/*.test.tsx"
  ]
}